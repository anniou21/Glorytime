            <%= image_tag 'companies/omega-white.png', width:'100', class:'m-3'  %>
            <%= image_tag 'companies/rolex-white.png', width:'100', class:'m-3'  %>
            <%= image_tag 'companies/tag-heuer-white.png', width:'100', class:'m-3'  %>
            <%= image_tag 'companies/tissot-white.png', width:'100', class:'m-3' %>
          </div>
  </div>
</div>





