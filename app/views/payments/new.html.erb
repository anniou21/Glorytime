<div class="container-checkout">
   <h1 class="page-title">Checkout summary</h1>
    <article class="receipt">
      <section class="receipt__half upper">
        <p>Total Ã  payer</p>
        <h1><strong><%= humanized_money_with_symbol @order.price_cents/100 %></strong></h1>
        <p class="sm"><strong>Le </strong><%= DateTime.now.strftime("%d/%m/%y - %H:%M")%></p>
        <div class="receipt__content">
          <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
        </div>
      </section>

      <section class="receipt__half lower">
        <button class="btn btn-flat">Payer</button>
      </section>
    </article>
</div>
