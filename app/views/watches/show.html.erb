
<div class="searchbar-div">
           <%= form_tag watches_path, class:"form-inline my-2 my-lg-0", id:"search_field", method: :get do %>

                    <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    type: "search",
                    placeholder: "Rolex" %>

                <%= submit_tag "Search", class: "btn btn-warning" %>
                <% end %>
</div>

