<div class="searchbar-div">
  <%= form_tag watches_path,class:"form-inline my-2 my-lg-0", id:"search_field", method: :get do %>
      <%= text_field_tag :query,
      params[:query], style:'width:1080px',
      class: "form-control",
      type: "search",
      placeholder: "ex: Rolex Submariner ..." %>

    <%= submit_tag "Search", class: "btn btn-flat" %>
  <% end %>
</div>

<div class="container">
      <div class="card">
      <div class="card-body row ">
          <div class="col-sm-12 col-md-6" id="image-container">
                <div id="main-img">
                     <%= cl_image_tag @watch.photo.key, height: 500, width: 400, crop: :fill %>
              </div>

              <span id="favorite-button" onclick="favoriteAdd()" class="btn"><i class="fa fa-heart"></i></span>
          </div>
          <div class="col-sm-12 col-md-6" id="product-information">
             <h2 class="p-0 m-0" id="product-title"><%= @watch.brand %></h2>
              <span id="product-short"><small><%= @watch.model %></small></span>
            <div class="container-fluid">
                          <div class="row">
                            <span id="old-price" class="text-danger"></span><h5 id="price"><%= @watch.cost_per_day %> €/jours</h5>
                          </div>
            </div>
             <div id="product-variables">
                 <p><%= @watch.description %></p>

                 <div id="text">

                 </div>
             </div>

<div id="add-to-cart">
            <%= simple_form_for([@booking, @booking_item]) do |f| %>
              <%= f.input :watch_id, as: :hidden %>
              <div>
                <h2>Période de location</h2>
                <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}, label: false %>
                <%= f.input :end_date, as: :string, label: false %>
                </div>
              </div>
              <%= f.submit 'Ajouter au panier', class: "btn btn-flat" %>
            <% end %>
          </div>
        </div>

          </div>
      </div>
  </div> <!-- end card -->
</div>




