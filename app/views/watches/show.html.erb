<div class="searchbar-div">
  <%= form_tag watches_path,class:"form-inline my-2 my-lg-0", id:"search_field", method: :get do %>
      <%= text_field_tag :query,
      params[:query], style:'width:1080px',
      class: "form-control",
      type: "search",
      placeholder: "ex: Rolex Submariner ..." %>

    <%= submit_tag "Search", class: "btn btn-flat" %>
  <% end %>
</div>

<div class="container">
      <div class="card">
      <div class="card-body row ">
          <div class="col-sm-12 col-md-6" id="image-container">
                <div id="main-img">
                     <%= cl_image_tag @watch.photo.key, height: 500, width: 400, crop: :fill %>
              </div>
              <!-- Wishlist -->
              <% if !current_user.bookmarks.pluck(:watch_id).include?(@watch.id) %>
                <%= link_to watch_bookmarks_path(@watch), method: :post do %>
                  <span id="favorite-button" class="btn"><i class="fa fa-heart grey-heart"></i></span>
                <% end %>
              <% else %>
                  <span id="favorite-button" class="btn"><i class="fa fa-heart red-heart"></i></span>
              <% end %>
              <!-- END Wishlist -->
          </div>
          <div class="col-sm-12 col-md-6" id="product-information">
             <h2 class="p-0 m-0" id="product-title"><%= @watch.brand %></h2>
              <span id="product-short"><small><%= @watch.model %></small></span>
            <div class="container-fluid">
                          <div class="row">
                            <span id="old-price" class="text-danger"></span><h5 id="price"><%= @watch.cost_per_day %> €/jours</h5>
                          </div>
            </div>
             <div id="product-variables">
                 <p><%= @watch.description %></p>

                 <div id="text">

                 </div>
             </div>

                <hr class="divider-featurette">
<div id="add-to-cart">
            <%= simple_form_for([@booking, @booking_item]) do |f| %>
              <%= f.input :watch_id, as: :hidden %>
              <div class="duration-location">
                <h2>Période de location</h2>
                <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}, label: false, placeholder: "Début de location" %>
                <%= f.input :end_date, as: :string, label: false, placeholder: "Fin de location" %>
                </div>
              </div>
              <hr class="divider-featurette">
              <%= f.submit 'Ajouter au panier', class: "btn-panier btn btn-flat" %>
            <% end %>
          </div>
        </div>

          </div>
      </div>
  </div> <!-- end card -->
</div>




